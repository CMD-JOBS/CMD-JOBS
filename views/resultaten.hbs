{{> logo-header}}

<main class="resultaten">

    <h1>Resultaten</h1>

    <!-- Als er geen vacatures zijn laat hij error zien -->
    {{#if errors}}
        {{#each errors}}
            <strong>{{this.message}}</strong>
        {{/each}}
    {{/if}}

    {{#each vacatures}}
    <div>
        <h2>{{vacatureTitel}}</h2>
        <h3>{{bedrijfsNaam}}</h3>
        <h4>{{plaats}}</h4>
        <h4 class="salaris"></h4>{{salaris}},- per maand</h4>

        <p class="description">{{vacatureInformatie}}</p>


        {{!-- <div class="opslaanButton"> --}}
            <form action="/resultaten" method="POST">
                <button type="submit" name="vacatureID" value={{_id}}>opslaan</button>
            </form>
            {{!--
        </div> --}}
    </div>

    {{/each}}
</main>
{{> navigatie-footer}}