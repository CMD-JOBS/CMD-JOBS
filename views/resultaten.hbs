{{> logo-header}}

<main class="resultaten">

    <h1>Resultaten</h1>
    {{#if errors}}
        {{#each errors}}
            <strong>{{this.message}}</strong>
        {{/each}}
    {{/if}}
    <section class="flex-resultaten">
    
        {{#each vacatures}}

        <div class="card">

            <h2>{{vacatureTitel}}</h2>
            <h3>{{bedrijfsNaam}}</h3>
            <h4>{{plaats}}</h4>
            <h4 class="salaris"></h4>{{salaris}}</h4>



            <p class="description">{{vacatureInformatie}}</p>
            {{!-- <p class="description">{{vacatureInformatie}}</p> --}}

     


                <form id="meer-details" action="/resultaten" method="POST">
                    <button type="submit" name="vacatureID" value={{_id}}>Opslaan</button>
                </form>
                
        </div>

        {{/each}}
    </section>


