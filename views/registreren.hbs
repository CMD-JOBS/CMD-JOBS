<main class="registreren">
    <img src="images/logo-cmdjobs.svg" alt="CMD JOBS Logo">
    <h1>Registreren</h1>

        {{#if errors}}
        {{#each errors}}
        <strong>{{this.message}}</strong>
        {{/each}}
        {{/if}}

    <form action="/registreren" method="POST">

        <div>
            <label for="email">E-mail</label>
            <input type="email" name="email" placeholder="example@mail.com" id="email" required>
        </div>
        <div>
            <label for="password">Wachtwoord</label>
            <input type="password" name="password" placeholder="Minimaal 6 karakters" id="password" required>
        </div>
        <div>
            <label for="password2">Bevestig wachtwoord</label>
            <input type="password" name="password2" placeholder="Minimaal 6 karakters" id="password2" required>
        </div>
        <button type="submit">Registreren</button>
    </form>


    <p>Heb je al een account? <a href="/">Login</a></p>

</main>