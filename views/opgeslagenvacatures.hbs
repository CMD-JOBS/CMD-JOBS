{{> logo-header}}

<main class="resultaten">

    <h1>Opgeslagen vacatures</h1>

    {{#if errors}}
        {{#each errors}}
            <strong>{{this.message}}</strong>
        {{/each}}
    {{/if}}

    <section class="flex-resultaten">
    {{#each opgeslagenVacatures}}
    <div class="card">
        <h2>{{vacatureTitel}}</h2>
        <h3>{{bedrijfsNaam}}</h3>
        <h4>{{plaats}}</h4>
        <h4 class="salaris"></h4>{{salaris}},- per maand</h4>

        <p class="description">{{vacatureInformatie}}</p>


        {{!-- <div class="opslaanButton"> --}}
            <form id="meer-details" action="/opgeslagenvacatures" method="POST">
                <button type="submit" name="vacatureID" value={{_id}}>verwijder</button>
            </form>
            {{!--
        </div> --}}
    </div>

    {{/each}}
    </section>
</main>
{{> navigatie-footer}}