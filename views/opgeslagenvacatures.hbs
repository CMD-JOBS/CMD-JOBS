{{> logo-header}}

<main class="resultaten">

    <h1>Opgeslagen vacatures</h1>

    {{#if errors}}
    {{#each errors}}
    <div class="error2">
        <strong>{{this.message}}</strong>
    </div>
    {{/each}}
    {{/if}}

    <section class="flex-resultaten">
    {{#each opgeslagenVacatures}}
    <div class="card">

            <div class="topcardwrapper">
                <h2>{{vacatureTitel}}</h2>
                <form action="/opgeslagenvacatures" method="POST">
                    <button class="savebutton" type="submit" name="vacatureID" value={{_id}}><img id="heart" class="saveimage" src="images/savebutton.svg" alt="save"></button>
                </form>
                {{!-- <a id="savebutton" class="savebutton" href=""><img id="heart" class="saveimage" src="images/savebutton.svg" alt="save"></a> --}}
            </div>
            
            <h3>{{bedrijfsNaam}}</h3>
            <h4>{{plaats}}</h4>
            <h4 class="salaris"></h4>{{salaris}}</h4>
            <h4 class="description">{{vacatureInformatie}}</h4>

            {{!-- <div class="opslaanButton"> --}}
                <section class="meer-details">

                    <p>Meer details</p>
                </section>
        </div>

    {{/each}}
    </section>
<script src="/scripts/resultatenpagina.js"></script>

</main>

{{> navigatie-footer}}