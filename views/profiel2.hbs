{{> logo-header}}

<main class="profiel-pagina">
    <header class="profiel-foto">
        <img src="{{profiel.profielFoto}}" alt="je profiel foto">
        <h1>{{profiel.voornaam}} {{profiel.achternaam}}</h1>

        <div class="bewerk-knop">
            <svg viewBox="0 0 512 512">
                <g>
                    <path d="m422.751 4.398c-5.863-5.863-15.352-5.863-21.215 0l-53.033 53.033 106.068 106.066 53.033-53.033c5.861-5.863 5.861-15.35 0-21.213z" />
                    <path d="m57.426 348.507 106.068 106.066 269.864-269.862-106.067-106.068zm301.685-195.616c5.863 5.863 5.863 15.35 0 21.213l-206.225 206.224c-5.863 5.863-15.35 5.863-21.213 0s-5.863-15.35 0-21.213l206.225-206.224c5.864-5.863 15.35-5.863 21.213 0z" />
                    <path d="m40.263 373.771-39.496 118.485c-1.791 5.396-.394 11.332 3.625 15.35 4.019 4.019 9.955 5.418 15.352 3.625l118.486-39.494z" />
                </g>
            </svg>
        </div>
    </header>

    <form class="profiel-gegevens" action="/profiel3" method="post">

        <div>
            <label for="biografie">Biografie</label>
            <textarea id="biografie" name="biografie" rows="3">{{profiel.biografie}}</textarea>
        </div>

        <div>
            <label for="opleidingsNiveau">Opleidingsniveau:</label>
            <select id="opleidingsNiveau" class="select" name="opleidingsNiveau">
                <option selected value="{{profiel.opleidingsNiveau}}">{{profiel.opleidingsNiveau}}</option>
                <option value="MBO">MBO</option>
                <option value="HBO">HBO</option>
                <option value="Universiteit">Universiteit</option>
            </select>
        </div>

        <fieldset>
            <legend>Voorkeuren</legend>
            <div>
                <label for="functie">Functie:</label>
                <select id="functie" class="select" name="functie">
                    <option selected value="{{profiel.functie}}">{{profiel.functie}}</option>
                    <option value="Frontend Development">Frontend Development</option>
                    <option value="Content Management">Content Management</option>
                    <option value="Visual Interface Design">Visual Interface Design</option>
                    <option value="Project Management">Project Management</option>
                    <option value="Interaction Design">Interaction Design</option>
                    <option value="UX Design">UX Design</option>
                    <option value="Backend Development">Backend Development</option>
                    <option value="Research">Research</option>
                </select>
            </div>

            <div>
                <label for="dienstverband">Dienstverband:</label>
                <select id="dienstverband" class="select" name="dienstverband">
                    <option selected value="{{profiel.dienstverband}}">{{profiel.dienstverband}}</option>
                    <option value="Fulltime">Fulltime</option>
                    <option value="Parttime">Parttime</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Stage">Stage</option>
                </select>
            </div>

            <div>
                <label for="bedrijfsGrootte">Bedrijfsgrootte:</label>
                <select id="bedrijfsGrootte" class="select" name="bedrijfsGrootte">
                    <option selected value="{{profiel.bedrijfsGrootte}}">{{profiel.bedrijfsGrootte}}</option>
                    <option value="0 tot 10">0 tot 10</option>
                    <option value="10 tot 50">10 tot 50</option>
                    <option value="Boven de 50">Boven de 50</option>
                </select>
            </div>
        </fieldset>

        <button id="bewerkt-verzend-knop" type="submit">Gegevens aanpassen</button>
    </form>
</main>

{{> navigatie-footer}}